{% extends 'layout.html.twig' %}

{% block content %}
    <h2>Les Categories</h2>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Nom de la categorie</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <a href="{{ path('categorie_articles', {slug: categorie.slug}) }}"> <i class="fas fa-eye mx-1 text-center" title="voir"></i></a>
                        <a href="{{ path('categorie_update', {id: categorie.id} ) }}"> <i class="fas fa-edit mx-1 text-center text-success" title="editer"></i></a>
                        <a href="{{ path('categorie_delete', {id: categorie.id} ) }}" onclick=" return confirm('êtes vous sûr de vouloir supprimer l\'auteur')" > <i class="fas fa-trash mx-1 text-center text-danger" title="supprimer"></i></a>
                    </td>
                </tr>
            {% endfor %}

        </tbody>

    </table>
{% endblock %}