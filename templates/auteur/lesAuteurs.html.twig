{% extends 'layout.html.twig' %}

{% block title %} les auteurs {% endblock %}

{% block content %}

    <h2>Les auteurs : </h2>
    <table class="table text-center">
        <thead class="thead-dark">
            <tr>
                <th>nom</th>
                <th>prenom</th>
                <th>date de naissance</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for auteur in auteurs %}
                <tr>
                    <td>{{ auteur.nom }}</td>
                    <td>{{ auteur.prenom }}</td>
                    <td> {{ auteur.dateDeNaissance | date("d-m-Y") }} </td>
                    <td>
                        <a href="{{ path('auteur', {id: auteur.id} ) }}"> <i class="fas fa-eye mx-1 text-center" title="voir"></i></a>
                        <a href="{{ path('auteur_update', {id: auteur.id}) }}"> <i class="fas fa-edit mx-1 text-center text-success" title="editer"></i></a>
                        <a href="{{ path('auteur_delete', {id: auteur.id}) }}" onclick=" return confirm('êtes vous sûr de vouloir supprimer l\'auteur')" > <i class="fas fa-trash mx-1 text-center text-danger" title="supprimer"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>

{% endblock %}